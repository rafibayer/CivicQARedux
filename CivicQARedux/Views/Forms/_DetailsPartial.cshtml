
@{
    @model CivicQARedux.Models.Forms.FormDTO
}
<script>
    function copyCreateURL(self) {
        const link = "@(Url.Action("Create", "FormResponses", new { id =  Model.Id }, Context.Request.Scheme))";
        navigator.clipboard.writeText(link)
        .then(() => {
            self.innerText = "Copied!";
            setTimeout(() => {
                self.innerText = "Copy";
            }, 2000);
        })
        .catch((err) => {
            console.error(err);
        });
    }
</script>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class="col-sm-4">
            Response Link
        </dt>
        <dd class="col-sm-10">
            <button class="btn btn-info" onclick="copyCreateURL(this)">
                Copy
            </button>
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.FormResponses)
        </dt>
        <dd class="col-sm-10">
            @Model.FormResponses.Count()
        </dd>
    </dl>
</div>

