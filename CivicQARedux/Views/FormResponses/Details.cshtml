@model CivicQARedux.Models.FormResponses.FormResponse
@using CivicQARedux.Models.Tags;

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EmailAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Body)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Body)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @await Html.PartialAsync("_IsActiveTogglePartial.cshtml", Model) 
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Form)
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="Forms" asp-action="Details" asp-route-id="@Model.Form.Id">
                @Html.DisplayFor(model => model.Form.Title)
            </a>
        </dd>
    </dl>
</div>
<h2>Tags</h2>
<div>
    <h4>Add New</h4>
    @await Html.PartialAsync("../Tags/_CreatePartial.cshtml", new TagInput { FormResponseId = Model.Id })
</div>
<hr />
<div class="container">
    @foreach (var tag in Model.Tags)
    {
        @await Html.PartialAsync("../Tags/_TagViewPartial.cshtml", tag)
    }
</div>


 

<h2>Reply</h2>
@await Html.PartialAsync("_DetailsResponseMailtoPartial.cshtml", Model) 

